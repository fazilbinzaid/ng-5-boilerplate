{
  "compilerOptions": {
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es6", "dom"],
    "mapRoot": "./",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "../dist/out-tsc",
    "sourceMap": true,
    "target": "es5",
    "allowJs":true,
    "typeRoots": [
      "../node_modules/@types"
    ],
    "paths": {
        "@common/*": ["./app/common/*"],
        "@removables/*": ["./app/removables/*"],
        "@server/*": ["./server/*"],
        "@src/*": ["./*"],
        "@components/*": ["./app/components/*"]
    }
  }
}
